{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "exclude": ["node_modules"]
} 