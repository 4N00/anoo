# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/anoo?schema=public"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Security
# Rate limiting (requests per window)
RATE_LIMIT=100
# Rate limiting window in milliseconds (1 hour = 3600000)
RATE_WINDOW=3600000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,https://your-production-domain.com"

# File Upload
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
# Comma-separated list of allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Cache Configuration
# Cache duration in seconds (1 hour = 3600)
CACHE_DURATION=3600

# Feature Flags
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_API_CACHING=true
ENABLE_RATE_LIMITING=true

# Deployment
# Vercel specific environment variables
VERCEL_URL="your-vercel-deployment-url"
VERCEL_ENV="development"

# Analytics and Monitoring (optional)
# SENTRY_DSN="your-sentry-dsn"
# GOOGLE_ANALYTICS_ID="your-ga-id"
# POSTHOG_API_KEY="your-posthog-api-key"

# Remember to:
# 1. Copy this file to .env.local for local development
# 2. Never commit the actual .env file
# 3. Keep this example file updated with all required variables
# 4. Add appropriate values for each environment (development, staging, production)