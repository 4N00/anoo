# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL="https://your-netlify-site.netlify.app"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="your-supabase-project-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Security
# Rate limiting (requests per window)
RATE_LIMIT=100
# Rate limiting window in milliseconds (1 hour = 3600000)
RATE_WINDOW=3600000

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS="http://localhost:3000,https://your-netlify-site.netlify.app"

# File Upload
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
# Comma-separated list of allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Cache Configuration
# Cache duration in seconds (1 hour = 3600)
CACHE_DURATION=3600

# Feature Flags
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_API_CACHING=true
ENABLE_RATE_LIMITING=true

# Resend API Key
RESEND_API_KEY="your-resend-api-key"

# Deployment
# Vercel specific environment variables
VERCEL_URL="your-vercel-deployment-url"
VERCEL_ENV="development"